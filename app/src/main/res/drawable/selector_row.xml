<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Color when the row is selected -->
    <item android:drawable="@color/colorItemClicked"  android:state_pressed="true" android:state_selected="false" />
    <item android:drawable="@color/colorItemSelected"  android:state_pressed="false" android:state_selected="true" />

    <!-- Standard background color -->
    <item android:drawable="@color/standard" android:state_selected="false" />
</selector>